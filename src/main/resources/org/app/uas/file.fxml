<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane prefHeight="339.0" prefWidth="438.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.app.uas.controller.FileController">
    <children>
        <Pane fx:id="panelReadWrite" layoutX="15.0" layoutY="129.0" prefHeight="195.0" prefWidth="409.0" style="-fx-background-color: BFB5AF;">
            <children>
                <Button fx:id="btnRead" layoutX="346.0" layoutY="7.0" mnemonicParsing="false" onAction="#onBtnReadClick" text="Read 1" />
                <Label layoutX="14.0" layoutY="12.0" text="File Path" />
                <TextField fx:id="inputTextFilePath" layoutX="121.0" layoutY="7.0" prefHeight="26.0" prefWidth="200.0" />
                <Label layoutX="15.0" layoutY="75.0" text="Content" />
                <TextArea fx:id="textAreaFileContent" layoutX="121.0" layoutY="76.0" prefHeight="106.0" prefWidth="200.0" />
                <Button fx:id="btnWrite" layoutX="345.0" layoutY="76.0" mnemonicParsing="false" onAction="#onBtnWriteClick" text="Save" />
                <Label fx:id="labelWarnKeyListener2" layoutX="77.0" layoutY="54.0" text="typing in content will directly write to File" />
                <Label fx:id="labelWarnKeyListener1" layoutX="14.0" layoutY="37.0" text="WARNING: Keyboard Event Listener Active" />
            <Button fx:id="btnRead1" layoutX="346.0" layoutY="41.0" mnemonicParsing="false" onAction="#onBtnRead1Click" text="Read 2" />
            </children>
        </Pane>
        <Pane fx:id="panelCopyDemo" layoutX="15.0" layoutY="331.0" prefHeight="92.0" prefWidth="409.0" style="-fx-background-color: BFB5AF;" visible="false">
            <children>
                <Button fx:id="btnCopy" layoutX="346.0" layoutY="14.0" mnemonicParsing="false" onAction="#onBtnCopyClick" text="Copy" />
                <Label layoutX="17.0" layoutY="18.0" text="Copy Source" />
                <Label layoutX="17.0" layoutY="56.0" text="Copy Destination" />
                <TextField fx:id="inputTextSourcePath" layoutX="126.0" layoutY="14.0" prefHeight="26.0" prefWidth="200.0" />
                <TextField fx:id="inputTextDestinationPath" layoutX="126.0" layoutY="52.0" prefHeight="26.0" prefWidth="200.0" />
            </children>
        </Pane>
        <RadioButton fx:id="rbAutoBrowse" layoutX="25.0" layoutY="14.0" mnemonicParsing="false" text="Browse Demo">
            <toggleGroup>
                <ToggleGroup fx:id="selectorMethod" />
            </toggleGroup></RadioButton>
        <RadioButton fx:id="rbReadFileFromFilePath" layoutX="135.0" layoutY="14.0" mnemonicParsing="false" text="Read File From Path" toggleGroup="$selectorMethod" />
        <RadioButton fx:id="rbWriteFromContent" layoutX="276.0" layoutY="14.0" mnemonicParsing="false" text="Write From Content" toggleGroup="$selectorMethod" />
        <Pane fx:id="panelBrowseDemo" layoutX="15.0" layoutY="70.0" prefHeight="50.0" prefWidth="409.0" style="-fx-background-color: #D5B9B2;">
            <children>
                <Label layoutX="14.0" layoutY="14.0" text="Browse File" />
                <Button fx:id="btnBrowse" layoutX="105.0" layoutY="10.0" mnemonicParsing="false" onAction="#onBtnBrowseClick" text="Browse..." />
                <TextField fx:id="inputTextBrowsedFilePath" layoutX="194.0" layoutY="10.0" prefHeight="26.0" prefWidth="188.0" />
            </children>
        </Pane>
        <RadioButton fx:id="rbCopySourceToDestination" layoutX="25.0" layoutY="41.0" mnemonicParsing="false" text="Copy Demo File" toggleGroup="$selectorMethod" visible="false" />
    </children>
</AnchorPane>
